{
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["ESNext", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator", "ESNext.Promise"],
    "module": "nodenext",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,

    "paths": {
      "@types/*": ["./types/*"]
    },

    // TODO: remove those whenever we migrate to TypeScript fully
    "noImplicitAny": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
